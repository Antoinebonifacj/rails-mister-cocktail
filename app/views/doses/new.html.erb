<h1>New Ingredient</h1>
<div class="formulaire">
    <%= simple_form_for [@cocktail, @dose] do |f| %>
        <%= f.input :measure, label: 'Quantity (unit)'%>
        <%= f.association :ingredient, collection: Ingredient.all %>
        <%= f.submit %>
    <% end %>
</div>

<div class="d-flex ">
    <a href="<%= cocktails_path %>" class="btn btn-ghost">Back to Cocktails</a>
</div>
