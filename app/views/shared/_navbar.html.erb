
<div class="navbar navbar-expand-sm navbar-light navbar-lewagon fixed-top">
  <div>
    <% unless current_user %>
      <%= link_to root_path, class: "navbar-brand" do %>
        <%= image_tag("Logo_Mister-Cocktails_Long.png", class: "nav-img") %>
      <% end %>
    <% else %>
      <%= link_to dashboard_path do %>
        <%= image_tag("Logo_Mister-Cocktails_Long.png", class: "nav-img") %>
      <% end %>
    <% end %>
  </div>
  <div>
    <nav class="navbar navbar-light bg-light">
    <%= form_tag cocktails_path, method: :get do %>
      <%= text_field_tag :query,
        params[:query],
        class: "form-control",
        placeholder: "Find a Cocktail"
      %>
      <%= submit_tag "Search", class: "btn btn-ghost" %>
    <% end %>
    </nav>
  </div>
  <div>
    <ul class="navbar-nav">
      <li class="nav-item active">
        <a href="<%= cocktails_path %>" class="nav-link">Cocktails</a>
      </li>
      <li class="nav-item">
        <%= link_to "Add your Cocktail", "cocktails/new", class: "nav-link" %>
      </li>
      <li class="nav-item">
        <%= link_to "", "cocktails/new", class: "nav-link" %>
      </li>
      <% if user_signed_in? %>
        <li class="nav-item dropdown">
          <% if current_user.avatar.attached? %>
            <%= cl_image_tag current_user.avatar.key, class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <% else %>
            <%= image_tag "default_avatar.png", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <% end %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
            <%= link_to "Edit Profile", edit_user_registration_path, class: "dropdown-item" %>
          </div>
        </li>
      <% else %>
        <li class="nav-item">
          <%= link_to "Login", new_user_session_path, class: "nav-link" %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
