<div class="banner d-flex justify-content-start">
  <div class="container">
      <h1>TGIF</h1>
      <p>Thanks God It's Friday</p>
      <p>Create your own collection of cocktails!</p>
  </div>
</div>

  <h1 class="title-list">My Cocktails</h1>

  <div class="d-flex justify-content-start" style="
    margin-left: 4rem;">
    <% @cocktails.each do |cocktail| %>
    <div class="card-product">
        <div class="card-product-infos">
          <% if @cocktail.photo != nil %>
            <%= cl_image_tag @cocktail.photo.key, height: 300, width: 400, crop: :fill %>
          <% end %>
          <h2><%= link_to cocktail.name, cocktail_path(cocktail), :style => "text-decoration: none;" %></h2>
            <h3>Category : </h3>
              <p><%= cocktail.category.name %></p>
            <h3>Glass : </h3>
              <p><%= cocktail.glass.name %></p>
            <h3>Preparation time : </h3>
              <p><%= cocktail.prep_time %> min</p>
            <h3>Alcoholic : </h3>
              <p><%= cocktail.alcoholic.name %></p>
            <h3>Description : </h3>
              <p><%= cocktail.description %></p>
      </div>
    </div>
    <% end %>
  </div>
<br>
<div class="d-flex justify-content-around">
  <a class="btn btn-ghost" href="<%= new_cocktail_path %>" role="button">Add New Cocktail</a>
</div>
<div class="footer fixed-bottom">
  <div class="footer-links">
    <a href="#"><i class="fab fa-github"></i></a>
    <a href="#"><i class="fab fa-instagram"></i></a>
    <a href="#"><i class="fab fa-facebook"></i></a>
    <a href="#"><i class="fab fa-twitter"></i></a>
    <a href="#"><i class="fab fa-linkedin"></i></a>
  </div>
  <div class="footer-copyright">
    This footer is made with <i class="fas fa-heart"></i> at Le Wagon
  </div>
</div>






