<h1 class="title-list">My Cocktails</h1>

<%= form_tag cocktails_path, method: :get do %>
  <%= text_field_tag :query,
    params[:query],
    class: "form-control",
    placeholder: "Find a Cocktail"
  %>
  <%= submit_tag "Search", class: "btn btn-primary" %>
<% end %>

<% @cocktails.each do |cocktail| %>
    <div class="card-product">
        <%= image_tag cocktail.photo_url %>
            <div class="card-product-infos">
                <h2>
                    <%= link_to cocktail.name, cocktail_path(cocktail), :style => "text-decoration: none;" %>
                </h2>
                <p><strong>Type of Drink : </strong></p>
                <p>
                    <%= cocktail.style %>
                </p>
            </div>
    </div>
    <% end %>
        <br>
        <div class="d-flex justify-content-around">
            <a href="<%= ingredients_index_path %>" class="btn btn-ghost">See all ingredients</a>
        </div>
        <div class="d-flex justify-content-around">
            <a class="btn btn-ghost" href="<%= new_cocktail_path %>" role="button">Add  New Cocktail</a>
        </div>
        <div class="footer fixed-bottom">
            <div class="footer-links">
                <a href="#"><i class="fab fa-github"></i></a>
                <a href="#"><i class="fab fa-instagram"></i></a>
                <a href="#"><i class="fab fa-facebook"></i></a>
                <a href="#"><i class="fab fa-twitter"></i></a>
                <a href="#"><i class="fab fa-linkedin"></i></a>
            </div>
            <div class="footer-copyright">
                This footer is made with <i class="fas fa-heart"></i> at Le Wagon
            </div>
        </div>
        <div class="container">

        </div>
