
<div class="banner fixed-top">
  <div class="container d-flex">
    <div class="d-flex"><p class="maj">T</p><span class="min d-flex align-self-end">hanks</span></div>
    <div class="d-flex"><p class="maj">G</p><span class="min d-flex align-self-end">od</span></div>
    <div class="d-flex"><p class="maj">I</p><span class="min d-flex align-self-end">t's</span></div>
    <div class="d-flex"><p class="maj">F</p><span class="min d-flex align-self-end">riday!</span></div>
    <p class="description d-flex">Create your own collection of cocktails!</p>
  </div>
</div>

  <div class="card" style="width: 32rem;">
    <div class="card-body">
      <h5 class="card-title"><%= @cocktail.name %></h5>

        <ul>
          <p class="card-text">
              <% @cocktail.doses.each do |dose| %>
              <div>
                <li class="d-flex justify-content-between"style="width: 24rem;"><%= dose.description%> of <%= dose.ingredient.name %><%= link_to "Delete a dose", dose_path(dose.id), method: :delete %></li>
              </div>
              <% end %>
          </p>
        </ul>
      <div class="d-flex justify-content-center">
      <a href= "<%= new_cocktail_dose_path(@cocktail) %>" class="btn btn-primary">Add ingredient</a>
      </div>
    </div>
  </div>


<div class="d-flex ">
  <a href= "<%= cocktails_path %>" class="btn btn-primary">Back to Cocktails</a>
</div>
