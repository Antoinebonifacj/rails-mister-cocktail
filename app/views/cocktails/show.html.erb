<div class="card" style="width: 32rem;">
  <div class="card-body">
    <h3 class="card-title">
        <%= @cocktail.name %>
    </h3>

    <p><strong>Category : </strong><%= @cocktail.category.name.capitalize %></p>
    <p><strong>Type of Glass : </strong><%= @cocktail.glass.name.capitalize %></p>
    <ul>
      <p class="card-text">
      <% if @cocktail.photo_url %>
        <%= image_tag @cocktail.photo_url %>
      <% end %>
        <%= @cocktail.description %>
        <% @cocktail.doses.each do |dose| %>
          <div>
            <li class="d-flex justify-content-between" style="width: 24rem;">
              <%= dose.measure%> of
              <%= dose.ingredient.name %>
              <img src="https://www.thecocktaildb.com/images/ingredients/<%= dose.ingredient.name %>-Small.png" alt="<%= dose.ingredient.name %>">
              <%= link_to "🗑️",dose_path(dose.id), method: :delete %>
            </li>
          </div>
        <% end %>
      </p>
    </ul>
    <div class="d-flex justify-content-center">
        <a href="<%= new_cocktail_dose_path(@cocktail) %>" class="btn btn-ghost">Add ingredient</a>
    </div>
  </div>
</div>


