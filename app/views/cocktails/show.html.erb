<div class="d-flex justify-content-center">
  <div class="card" style="width: 18rem;">
    <div class="card-body">
      <h5 class="card-title"><%= @cocktail.name %></h5>
      <div class="d-flex justify-content-between">
        <p class="card-text">
            <% @cocktail.doses.each do |dose| %>
              <%= dose.description%> de <%= dose.ingredient.name %>
              <%= cl_image_tag @cocktail.photo.key, height: 300, width: 400, crop: :fill %>
              <p><%= link_to "Delete a dose", dose_path(dose.id), method: :delete %></p>
            <% end %>
        </p>
      </div>
      <div class="d-flex justify-content-center">
      <a href= "<%= new_cocktail_dose_path(@cocktail) %>" class="btn btn-primary">Add ingredient</a>
      </div>
    </div>
  </div>
</div>

<div class="d-flex justify-content-center">
  <a href= "<%= cocktails_path %>" class="btn btn-primary">Back to Cocktails</a>
</div>

