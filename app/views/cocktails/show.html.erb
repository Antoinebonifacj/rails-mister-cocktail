  <div class="card" style="width: 32rem;">
    <div class="card-body">
      <h3 class="card-title"><%= @cocktail.name %></h3>

        <ul>
          <p class="card-text">
              <%= cl_image_tag @article.photo.key, height: 300, width: 400, crop: :fill %>
              <% @cocktail.doses.each do |dose| %>
              <div>
                <li class="d-flex justify-content-between"style="width: 24rem;"><%= dose.description%> of <%= dose.ingredient.name %><%= link_to "🗑️",dose_path(dose.id), method: :delete %></li>
              </div>
              <% end %>
          </p>
        </ul>
      <div class="d-flex justify-content-center">
      <a href= "<%= new_cocktail_dose_path(@cocktail) %>" class="btn btn-ghost">Add ingredient</a>
      </div>
    </div>
  </div>


